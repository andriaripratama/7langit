	function _scoreboard_index() {
		//return "Scoreboard!";
		
		$query = db_select('leaderboard', 'l');
		$query->fields('l', array('id', 'username', 'gameid', 'scores', 'created_at'));
		$item = $query->execute()->fetchAll();
      
