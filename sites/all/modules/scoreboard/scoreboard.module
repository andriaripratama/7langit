	function _scoreboard_last_id() {
		$query = db_select('leaderboard', 'l');
		$query->fields('l', array('id'));
		$query->orderBy('id', 'DESC');
		$query->range(0, 1);
		$item = $query->execute()->fetchAll();
		
		return $item;
	}
	
